{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "first_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "pattern": "^[a-zA-Z]+$"
        },
        "last_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "pattern": "^[a-zA-Z]+$"
        },
        "email": {
            "type": "string",
            "maxLength": 60,
            "format": "email"
        }
    },
    "required": [
        "first_name",
        "last_name",
        "email"
    ]
}
