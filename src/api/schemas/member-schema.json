{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1
        },
        "first_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "pattern": "^[a-zA-Z]+$"
        },
        "last_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 20,
            "pattern": "^[a-zA-Z]+$"
        },
        "email": {
            "type": "string",
            "maxLength": 60,
            "format": "email",
            "pattern": ".+@.+\\..+"
        }
    },
    "required": [
        "first_name",
        "last_name",
        "email"
    ]
}
